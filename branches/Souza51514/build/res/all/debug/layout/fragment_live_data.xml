<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Gauge="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gaugelayout"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/gaugeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickGauge"/>

        <org.souza.obdmobilereader.obdmobilereader.mobileobdreader.Gauge.Gauge
            android:id="@+id/tempgauge"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            Gauge:maxDeg="110"
            Gauge:minDeg="-110"
            Gauge:maxVal="250"
            Gauge:minVal="50"
            Gauge:stride="20"
            Gauge:totalTicks="22"
            Gauge:tempGradient="true"/>

        <org.souza.obdmobilereader.obdmobilereader.mobileobdreader.Gauge.Gauge
            android:id="@+id/speedgauge"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            Gauge:maxDeg="140"
            Gauge:minDeg="-110"
            Gauge:maxVal="160"
            Gauge:minVal="0"
            Gauge:stride="10"
            Gauge:totalTicks="34"
            Gauge:tempGradient="false"/>



        <org.souza.obdmobilereader.obdmobilereader.mobileobdreader.Gauge.Gauge
            android:id="@+id/rpmgauge"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            Gauge:maxDeg="90"
            Gauge:minDeg="-90"
            Gauge:maxVal="8"
            Gauge:minVal="0"
            Gauge:stride="1"
            Gauge:totalTicks="18"
            Gauge:tempGradient="false"/>

        <org.souza.obdmobilereader.obdmobilereader.mobileobdreader.Gauge.Gauge
            android:id="@+id/engloadgauge"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            Gauge:maxDeg="90"
            Gauge:minDeg="-90"
            Gauge:maxVal="100"
            Gauge:minVal="0"
            Gauge:stride="10"
            Gauge:totalTicks="22"
            Gauge:tempGradient="false"/>
        <org.souza.obdmobilereader.obdmobilereader.mobileobdreader.Gauge.Gauge
            android:id="@+id/intaketemp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            Gauge:maxDeg="120"
            Gauge:minDeg="-120"
            Gauge:maxVal="130"
            Gauge:minVal="30"
            Gauge:stride="10"
            Gauge:totalTicks="22"
            Gauge:tempGradient="true"/>

        <org.souza.obdmobilereader.obdmobilereader.mobileobdreader.Gauge.Gauge
            android:id="@+id/voltage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            Gauge:maxDeg="120"
            Gauge:minDeg="-120"
            Gauge:maxVal="16"
            Gauge:minVal="11"
            Gauge:stride="0.5"
            Gauge:totalTicks="22"
            Gauge:tempGradient="false"/>

