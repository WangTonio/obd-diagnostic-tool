<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.souza.obdmobilereader.obdmobilereader.mobileobdreader.DtcLookUpFragment">

    <ListView
        android:id="@+id/dtCodeView"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

    </ListView>

    <Button
        android:id="@+id/btn_cc"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dtCodeView"
        android:layout_marginTop="15dp"
        android:text="@string/btn_clearcodes"
        android:textColor="#ffffff"
        android:background="@drawable/btnbgrnd"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_debug_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:onClick="onClick"/>
</RelativeLayout>
