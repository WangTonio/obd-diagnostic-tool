<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dtclookup_fragment"
    tools:context="org.souza.obdmobilereader.obdmobilereader.mobileobdreader.DtcLookUpFragment">

    <ListView
        android:id="@+id/dtCodeView"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

    </ListView>

    <Button
        android:id="@+id/btn_cc"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/btn_clearcodes"
        android:textColor="#ffffff"
        android:background="@drawable/btnbgrnd"
        android:onClick="onClickClC"
        android:layout_below="@+id/dtCodeView"
        android:layout_alignEnd="@+id/dtCodeView" />

    <Button
        android:id="@+id/btn_checkcodes"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/btn_chkcodes"
        android:onClick="onClickChC"
        android:textColor="#ffffff"
        android:layout_below="@+id/dtCodeView"
        android:background="@drawable/checkcodesbgrnd"
        android:layout_toLeftOf="@+id/btn_cc"
        android:layout_marginRight="45dp" />

</RelativeLayout>
