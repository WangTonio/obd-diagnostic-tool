<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceScreen
        android:key="btn_Units"
        android:title="Units"
        android:persistent="false">
        <PreferenceCategory android:title="@string/title_units">
            <ListPreference
                android:key="btn_speedPref"
                android:title="@string/title_speed"
                android:summary="@string/sum_speed"
                android:entries="@array/speedUnits"
                android:entryValues="@array/listValues"/>
            <ListPreference
                android:key="btn_tempPref"
                android:title="@string/title_temp"
                android:summary="@string/sum_temp"
                android:entries="@array/tempUnits"
                android:entryValues="@array/listValues" />
            <ListPreference
                android:key="btn_presPref"
                android:title="@string/title_press"
                android:summary="@string/sum_press"
                android:dialogTitle="@string/title_press"
                android:entries="@array/pressPref"
                android:entryValues="@array/listValues"/>
            <ListPreference
                android:key="btn_accelPref"
                android:summary="@string/sum_accel"
                android:title="@string/title_accel"
                android:dialogTitle="@string/title_accel"
                android:entries="@array/accelPref"
                android:entryValues="@array/listValues"
                android:defaultValue="g"/>
            <ListPreference
                android:key="btn_areaPref"
                android:summary="@string/sum_area"
                android:title="@string/title_area"
                android:dialogTitle="@string/title_area"
                android:entries="@array/areaPref"
                android:entryValues="@array/listValues"/>
            <ListPreference
                android:key="btn_"
                />
        </PreferenceCategory>
    </PreferenceScreen>
    <PreferenceScreen
        android:key="btn_tdFormat"
        android:title="Time &amp; Date"
        android:persistent="true">
        <ListPreference
            android:key="btn_timePref"
            android:title="@string/title_time"
            android:summary=""
            android:dialogTitle="@string/title_timeFormat"
            android:entries="@array/timePref"
            android:entryValues="@array/timePref"
            />
        <ListPreference
            android:key="btn_datePref"
            android:title="@string/title_date"
            android:dialogTitle="@string/title_dateFormat"
            android:entries="@array/datePref"
            android:entryValues="@array/listValues"
            />
    </PreferenceScreen>
